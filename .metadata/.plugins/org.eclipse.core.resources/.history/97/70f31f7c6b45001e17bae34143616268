package viikko2ehtolauseet;

import java.util.Scanner;

public class Palkka {

	public static void main(String[] args) {
		Scanner lukija = new Scanner(System.in);
		System.out.print("Anna palkka: ");
		double palkka = lukija.nextDouble();
		// KOSKA LUETTIIN LUKU, NIIN PUSKURIIN JÄI ENTER
		// ENTERIN POISTO
		lukija.nextLine();
		System.out.print("Anna veroprosentti: ");		
		System.out.print("Anna ikä: ");

		
		Anna palkka: 3000
		Anna veroprosentti: 20
		Anna ikä: 25

		Bruttopalkka 3000
		Veron osuus 600,00
		Työeläkevakuutusmaksun osuus 202,50
		Työttömyysvakuutuksen osuus 45,00
		Käteen jää 2152,50
	}

}
