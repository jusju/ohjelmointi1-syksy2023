package viikko1perusteet;

import java.util.Scanner;

public class ScannerDemo {
	public static void main(String[] args) {
		
		Scanner lukija = new Scanner(System.in);
		System.out.println("Anna ikäsi: ");
		int ika = lukija.nextInt();
		// PUSKURIN TYHJENNYS TURHISTA ENTEREISTA
		// OLISI HYVÄ MUISTAA AINA INT TAI DOUBLE ARVON
		// LUKEMISEN JÄLKEEN
		lukija.nextLine();
		System.out.println("Anna nimesi: ");
		String nimi = lukija.nextLine();
		// PÖTKÖTYS ELI + MERKILLÄ ON KAKSI ROOLIA
		System.out.println("Ikäsi on: " + ika);
		System.out.println("Numero on: " + nimi);
		
	}
}
